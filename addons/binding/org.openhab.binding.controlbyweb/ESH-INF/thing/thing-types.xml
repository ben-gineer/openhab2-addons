    <!-- Sample Thing Type -->
    <thing-type id="x332">
        <label>ControlByWeb X-332 Advanced I/O Controller</label>
        <description>ControlByWeb X-332 | Web-Enabled Advanced I/O Controller</description>

        <channels>
            <channel id="input1" typeId="input" />
            <channel id="input2" typeId="input" />
            <channel id="input3" typeId="input" />
            <channel id="input4" typeId="input" />
            <channel id="input5" typeId="input" />
            <channel id="input6" typeId="input" />
            <channel id="input7" typeId="input" />
            <channel id="input8" typeId="input" />
            <channel id="input9" typeId="input" />
            <channel id="input10" typeId="input" />
            <channel id="input11" typeId="input" />
            <channel id="input12" typeId="input" />
            <channel id="input13" typeId="input" />
            <channel id="input14" typeId="input" />
            <channel id="input15" typeId="input" />
			<channel id="input16" typeId="input" />
			<channel id="relay1" typeId="relay" />
			<channel id="relay2" typeId="relay" />
			<channel id="relay3" typeId="relay" />
			<channel id="relay4" typeId="relay" />
			<channel id="relay5" typeId="relay" />
			<channel id="relay6" typeId="relay" />
			<channel id="relay7" typeId="relay" />
			<channel id="relay8" typeId="relay" />
			<channel id="relay9" typeId="relay" />
			<channel id="relay10" typeId="relay" />
			<channel id="relay11" typeId="relay" />

			<channel id="relay14" typeId="relay" />
			<channel id="relay15" typeId="relay" />
			<channel id="relay16" typeId="relay" /> 
        </channels>

        <config-description>
            <parameter name="ipAddress" type="text">
                <label>IP Address</label>
                <description>IP Address of ControlByWeb Unit</description>
                <required>true</required>
            </parameter>

            <parameter name="refresh" type="integer">
                <label>Refresh interval</label>
                <description>Specifies the refresh interval in seconds</description>
                <default>20</default>
            </parameter>
        </config-description>
    </thing-type>

    <!-- Input Channel Type -->
    <channel-type id="input">
        <item-type>Switch</item-type>
        <label>ControlByWeb Input Channel</label>
        <description>Input channel for ControlByWeb Relay</description>
        <state readOnly="true" />
    </channel-type>

    <!-- Output Channel Type -->
    <channel-type id="relay">
        <item-type>Switch</item-type>
        <label>ControlByWeb Output Relay</label>
        <description>Relay channel for ControlByWeb Relay</description>
    </channel-type>

</thing:thing-descriptions>